<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#00C897"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:text="서비스를 이용할 범위를 선택하세요"
            android:textColor="#FFFDFD"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_locationchange_myloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginRight="20sp"
            android:backgroundTint="#FFD365"
            android:text="내 위치"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_locationchange_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFD365"
        android:backgroundTint="#FFD365"
        android:text="위치 설정 완료"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>