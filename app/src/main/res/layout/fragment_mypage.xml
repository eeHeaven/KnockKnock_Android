<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.MypageFragment">

    <LinearLayout
        android:id="@+id/ly_mypage_entire"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_myinfobox"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:background="#E1FBC2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mypage_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5sp"
                android:paddingBottom="1sp"
                android:text="테스트멤버"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_mypage_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="testmember1234"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_mypage_mylocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="내위치내위치현위치" />

            <TextView
                android:id="@+id/tv_button_myinfo"
                android:layout_width="120sp"
                android:layout_height="30sp"
                android:layout_marginLeft="147sp"
                android:layout_marginTop="8sp"
                android:background="@drawable/bg_custom_myinfo_button"
                android:clickable="true"
                android:drawableLeft="@drawable/edit_location_size"
                android:drawablePadding="0sp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="위치 변경"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/ly_mypage_icons"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:background="#F1FBE6">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ly_button_mypost"
                    android:layout_width="137sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:src="@drawable/ic_post" />

                    <TextView
                        android:id="@+id/tv_button_mypost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:gravity="center"
                        android:text="내가 쓴 게시글"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_button_mycomment"
                    android:layout_width="137sp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:src="@drawable/ic_comment" />

                    <TextView
                        android:id="@+id/tv_button_mycomment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:gravity="center"
                        android:text="내가 쓴 댓글"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_button_myinfo"
                    android:layout_width="136sp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:src="@drawable/icon_myinfo" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:gravity="center"
                        android:text="내 정보"
                        android:textStyle="bold" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ly_button_payinfo"
                    android:layout_width="137sp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:src="@drawable/ic_payinfo" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:gravity="center"
                        android:text="결제 내역"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_button_pointinfo"
                    android:layout_width="137sp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:src="@drawable/ic_pointinfo" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:gravity="center"
                        android:text="포인트 사용 내역"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_button_setting"
                    android:layout_width="136sp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:src="@drawable/ic_settings" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:gravity="center"
                        android:text="설정"
                        android:textStyle="bold" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="140sp"
            android:background="#FFFFFF">

            <LinearLayout
                android:id="@+id/paybox"
                android:layout_width="380sp"
                android:layout_height="60sp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_custom_button_pay"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/edit_coin_size" />

                <TextView
                    android:id="@+id/mypage_tv_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18sp"
                    android:paddingLeft="5sp"
                    android:paddingRight="10sp"
                    android:text="포인트"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_mypage_point"
                    android:layout_width="190sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18sp"
                    android:gravity="right"
                    android:paddingRight="5sp"
                    android:text="XXXXpoint"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_mypage_payboxIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_horizontal"
                    android:layout_marginRight="20sp"
                    android:gravity="right"
                    android:text=">"
                    android:textColor="#FAF6F6"
                    android:textSize="40sp" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ly_etcfunction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F1FBE6"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_button_mypage_ask"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:background="@drawable/bg_custom_button_ask"
                android:gravity="center"
                android:text="고객문의"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_button_logout"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="5sp"
                android:layout_weight="1"
                android:background="@drawable/bg_custom_button_ask"
                android:gravity="center"
                android:text="로그아웃"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>