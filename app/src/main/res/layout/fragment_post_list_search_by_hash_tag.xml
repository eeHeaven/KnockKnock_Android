<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FDFFA9">

        <LinearLayout
            android:layout_width="276dp"
            android:layout_height="50dp"
            android:background="#FDFFA9"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hashtagfragment_hashtag"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="6sp"
                android:layout_marginRight="8sp"
                android:background="@drawable/bg_custom_hashtag"
                android:paddingLeft="8sp"
                android:paddingTop="8sp"
                android:paddingRight="8sp"
                android:paddingBottom="5sp"
                android:text="#해시태그" />

            <TextView
                android:id="@+id/tv_hashtagfragment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="6sp"
                android:text="XX"
                android:textColor="#FF9F1C"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="6sp"
                android:layout_marginRight="0sp"
                android:text="posts" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_homefragment_postRegister"
            android:layout_width="70dp"
            android:layout_height="35sp"
            android:layout_marginTop="6sp"
            android:background="#00C897"
            android:text="글 작성"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:strokeColor="#009688" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_hashtagBoard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>