<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KnockKnock" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backgroundbar</item>
        <item name="colorPrimaryVariant">@color/backgroundbardark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/backgroundbar</item> <!-- Toolbar의 배경색-->
        <item name="titleTextAppearance">@style/ToolbarTitleStyle.Dark</item> <!-- Toolbar의 타이틀 텍스트-->
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleStyle.Dark</item> <!-- Toolbar의 서브타이틀 텍스트-->
    </style>

    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textSize">15dp</item> <!-- Toolbar의 타이틀 텍스트 사이즈-->
    </style>

    <!-- Toolbar의 서브타이틀 텍스트-->
    <style name="ToolbarSubtitleStyle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/white</item> <!-- Toolbar의 서브타이틀 텍스트 색상-->
        <item name="android:textSize">12dp</item> <!-- Toolbar의 서브타이틀 텍스트 사이즈-->
    </style>

    <style name="Theme.KnockKnock.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item> <!--Status Bar 아이콘의 색상 true:검은 아이콘, false:흰 아이콘-->

        <item name="toolbarStyle">@style/ToolbarStyle.Dark</item> <!--Toolbar 스타일-->
        <item name="colorControlNormal">@color/white</item> <!--홈/뒤로가기 버튼의 색상-->
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#019267</item>
    </style>

    <style name="Theme.KnockKnock.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KnockKnock.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>